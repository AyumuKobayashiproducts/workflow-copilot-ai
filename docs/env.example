# Database (Production: Vercel Postgres)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require"
PRISMA_DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require"

# Database (Local dev / E2E)
# Tip: this repo includes `docker-compose.yml` for Postgres:
#   npm run db:up
#   npm run db:migrate
#   npm run test:e2e
#   npm run db:down
# (Then set the URLs below in `.env.local`.)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"
# PRISMA_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"

# Auth.js / NextAuth
AUTH_SECRET="generate-a-random-secret"
AUTH_URL="http://localhost:3000"

# GitHub OAuth (create an OAuth App)
AUTH_GITHUB_ID="your_github_oauth_app_client_id"
AUTH_GITHUB_SECRET="your_github_oauth_app_client_secret"

# Slack (Incoming Webhook)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# Monitoring (Sentry)
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE="0.0"
SENTRY_TEST_ENABLED="0"

# Demo tools (show /settings demo data reset button)
DEMO_TOOLS="0"

# OpenAI (Breakdown AI generation)
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL="gpt-4o-mini"
AI_DAILY_LIMIT="20"

# E2E (Playwright)
# Used by /api/e2e/reset (enabled only when AUTH_BYPASS=1)
E2E_TOKEN="e2e"


