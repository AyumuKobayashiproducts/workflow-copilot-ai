{
  "name": "workflow-copilot-ai",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint src middleware.ts --max-warnings=0",
    "check:i18n": "node scripts/check-i18n-keys.mjs",
    "db:generate": "prisma generate",
    "db:migrate": "bash -lc 'set -a; [ -f .env.local ] && source .env.local; set +a; prisma migrate dev'",
    "db:deploy": "bash -lc 'set -a; [ -f .env.local ] && source .env.local; set +a; prisma migrate deploy'",
    "db:studio": "prisma studio",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down -v",
    "vercel-build": "node scripts/preflight-prod.mjs && prisma generate && prisma migrate deploy && next build",
    "test:e2e": "bash -lc 'set -a; [ -f .env.local ] && source .env.local; set +a; node scripts/preflight-e2e.mjs && env -u NO_COLOR playwright test'",
    "screenshots": "env -u NO_COLOR playwright test --config playwright.screenshots.config.ts",
    "preflight:prod": "node scripts/preflight-prod.mjs"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.4.1",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.1",
    "@sentry/nextjs": "^10.30.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.507.0",
    "next": "^15.1.2",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.2",
    "playwright": "^1.55.0",
    "postcss": "^8.4.49",
    "prisma": "^6.4.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
