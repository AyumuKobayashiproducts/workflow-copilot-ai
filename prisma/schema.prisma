generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Vercel Prisma Postgres provides a non-pooled URL as PRISMA_DATABASE_URL,
  // which is better suited for migrations than the pooled DATABASE_URL.
  directUrl = env("PRISMA_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  tasks         Task[]
  weeklyNotes   WeeklyNote[]
  weeklyReports WeeklyReport[]
  aiUsage       AiUsage[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum TaskStatus {
  todo
  done
}

enum AiUsageKind {
  breakdown
  weekly
}

model Task {
  id          String     @id @default(cuid())
  userId      String
  title       String
  status      TaskStatus @default(todo)
  source      String?
  completedAt DateTime?
  focusAt     DateTime?

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([userId, focusAt])
}

model WeeklyNote {
  id        String   @id @default(cuid())
  userId    String
  weekStart DateTime
  note      String   @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId, weekStart])
}

model WeeklyReport {
  id        String   @id @default(cuid())
  userId    String
  weekStart DateTime
  text      String   @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId, weekStart])
}

model AiUsage {
  id     String      @id @default(cuid())
  userId String
  date   String      // YYYY-MM-DD (UTC)
  kind   AiUsageKind
  count  Int         @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date, kind])
  @@index([userId, date])
}


